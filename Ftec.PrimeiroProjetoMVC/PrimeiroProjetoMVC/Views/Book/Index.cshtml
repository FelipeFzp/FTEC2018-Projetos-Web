@{
    var books = (List<Book>) ViewData["books"];
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Livros</h2>
<a asp-action="Form">Create New</a>
<table class="table">
    <thead>
        <tr>
            <th>Identificação</th>
            <th>Nome</th>
            <th>Autor</th>
            <th>Descrição</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in books) {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>@item.Author</td>
                <td>@item.Description</td>
                <td>@Html.ActionLink("Delete", "Delete", new {  id = item.ID })</td>
            </tr>
        }
    </tbody>
</table>
