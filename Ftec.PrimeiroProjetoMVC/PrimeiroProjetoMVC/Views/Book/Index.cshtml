@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Livros</h2>

<p>
    <a asp-action="Form">Criar Novo</a>
</p>

<div class="row">
    <div class="col-xs-12">
        <form asp-action="Search">
            <div class="form-group">
                <label for="search">Buscar</label>
                <input type="text" name="search" class="form-control" id="search" placeholder="Buscar" value="@ViewBag.Search">
            </div>
            <button type="submit" class="btn btn-default">Enviar</button>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Identificação</th>
            <th>Nome</th>
            <th>Autor</th>
            <th>Descrição</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Books) {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>@item.Author</td>
                <td>@item.Description</td>
                <td>@Html.ActionLink("Deletar", "Delete", new {  id = item.ID })</td>
            </tr>
        }
    </tbody>
</table>
